{
  "root": true,
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "linebreak-style": [
      "error",
      "windows"
    ],
    "func-names": [
      "error",
      "never"
    ],
    "import/no-unresolved": [
      2,
      {
        "commonjs": true
      }
    ]
  }
}

